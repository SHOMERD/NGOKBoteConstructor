<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NGOKBoteConstructor.Pages.EditPage">


    <ContentPage.Content >
        <StackLayout >

            <Label/>
            <Label Text="Текст на кнопке:"/>
            <Entry x:Name="TitleEntery"/>

            <Label Text="Текст подменю:"/>
            <Editor AutoSize="TextChanges" x:Name="TextOfMenuEntery"/>

            <Label/>
            <StackLayout x:Name="TegIsSeteblede" IsEnabled="False">
                <Label Text="Тег кнопки:"/>
                <Entry x:Name="ItemTegEntry"/>
            </StackLayout>

           
            <Label/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Label Text="Кнопка имеет подменю   " VerticalOptions="CenterAndExpand"/>
                <Switch  x:Name="IsHasRebcursive" />
            </StackLayout>


            <Label/>
            <Label/>
            <Label/>
            
            
            <StackLayout Orientation="Vertical">
                <Button Text="Сохранить" Clicked="SaveText"/>
                <Button Text="Отмена" Clicked="CancelChanges"/>
            </StackLayout>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>